          async function addToCart(proId){
            await $.ajax({
                url:'/add-to-cart/'+proId,
                method:'get',
                success:(response)=>{
                    if(response.redirectTo){
                        window.location.href = response.redirectTo
                    }
                    if(response.status){
                        let count = $('#cart-count').html()
                        count = parseInt(count)+1
                        $("#cart-count").html(count)
                    }
                    alert(response)
                }

            })
        }
         //   });
    </script>
