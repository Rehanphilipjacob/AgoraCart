
<section>
  <div class="container mt-4">
    <div class="d-flex justify-content-end mb-3">
      <a href="/admin/add-product" class="btn btn-primary">Add Product</a>
    </div>

    <table id="myTable" class="table table-striped table-bordered align-middle">
      <thead class="table-dark">
        <tr>
          <th scope="col" style="width: 5%">No</th>
          <th scope="col" style="width: 15%">Image</th>
          <th scope="col" style="width: 15%">Name</th>
          <th scope="col" style="width: 10%">Price</th>
          <th scope="col" style="width: 15%">Category</th>
          <th scope="col" style="width: 25%">Description</th>
          <th scope="col" style="width: 15%">Actions</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
        <tr>
          <td>{{inc @index}}</td>
          <td>
            <img src="/product-images/{{this._id}}.jpg" 
                 alt="{{this.Name}}" 
                 class="img-fluid rounded"
                 style="max-width: 50px;">
          </td>
          <td>{{this.Name}}</td>
          <td>â‚¹{{this.Price}}</td>
          <td>{{this.Category}}</td>
          <td class="text-truncate" style="max-width: 200px;">{{this.Description}}</td>
          <td>
            <a class="btn btn-sm btn-primary" href="/admin/edit-product/{{this._id}}">Edit</a>
            <a class="btn btn-sm btn-danger" href="/admin/delete-product/{{this._id}}" onclick="return confirm('Are you sure?')">Delete</a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>
