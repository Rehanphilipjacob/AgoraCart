<section>
    <div class="container mt-5">
        <div class="row g-4">
            {{#each products}}
            <div class="col-md-3 d-flex">
                <div class="card w-100 shadow-sm border-0" style="transition: transform 0.2s; height:100%;">
                    <img src="/product-images/{{this._id}}.jpg" 
                         alt="{{this.Name}}" 
                         class="card-img-top" 
                         style="height:200px; object-fit:cover;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-truncate">{{this.Name}}</h5>
                        <p class="mb-1 fw-bold">Rs.{{this.Price}}</p>
                        <p class="card-text text-muted" 
                           style="overflow:hidden; display:-webkit-box; -webkit-line-clamp:2; -webkit-box-orient:vertical;">
                           {{this.Description}}
                        </p>
                        <button onclick="addToCart('{{this._id}}')" 
                                class="btn btn-primary mt-auto">
                            Add to Cart
                        </button>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>

<script>
document.querySelectorAll('.card').forEach(card => {
    card.addEventListener('mouseenter', () => card.style.transform = 'scale(1.02)');
    card.addEventListener('mouseleave', () => card.style.transform = 'scale(1)');
});
</script>
