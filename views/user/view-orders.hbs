<div class="table-responsive mt-4">
  <table class="table table-striped align-middle">
    <thead class="table-light">
      <tr>
        <th>Sl.No</th>
        <th>Date</th>
        <th>Address</th>
        <th>Pincode</th>
        <th>Mobile</th>
        <th>Status</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      {{#if orders.length}}
        {{#each orders}}
        <tr>
          <td>{{inc @index}}</td>
          <td>{{formatDate this.date}}</td>
          <td>{{this.deliveryDetails.address}}</td>
          <td>{{this.deliveryDetails.pincode}}</td>
          <td>{{this.deliveryDetails.mobile}}</td>
          <td>
            <span class="badge {{statusClass this.status}}">{{this.status}}</span>
          </td>
          <td>
            <a href="/view-order-products/{{this._id}}" class="btn btn-sm btn-info">View Products</a>
          </td>
        </tr>
        {{/each}}
      {{else}}
        <tr>
          <td colspan="7" class="text-center text-muted py-4">No orders found.</td>
        </tr>
      {{/if}}
    </tbody>
  </table>
</div>

